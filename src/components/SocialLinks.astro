---
interface Props {
    LinkedIn: string;
    GitHub: string;
    Discord: string; 
    Twitter: string; 
    Gmail: string;
}

const { LinkedIn, GitHub, Discord, Twitter, Gmail } = Astro.props
---
<div class="flex flex-row gap-2">
    <div class="card bg-[#23262D] sm:m-auto p-2 w-2/12 h-auto rounded-lg">
        <a class="hover:text-gray-400 transition-all" href={Twitter} target="_blank" rel="noopener noreferrer" aria-label="Link to Twitter profile"><i class="fab fa-twitter" style="color: #1DA1F2;"></i> Twitter</a>
    </div>
    <div class="card bg-[#23262D] sm:m-auto p-2 w-2/12 h-auto rounded-lg">
        <a class="hover:text-gray-400 transition-all" href={Gmail} target="_blank" rel="noopener noreferrer" aria-label="Link to Gmail"><i class="fa-solid fa-envelope-open" style="color: #ffff;"></i> Gmail</a>
    </div>
    <div class="card bg-[#23262D] sm:m-auto p-2 w-2/12 h-auto rounded-lg">
        <a class="hover:text-gray-400 transition-all" href={GitHub} target="_blank" rel="noopener noreferrer" aria-label="Link to GitHub profile"><i class="fa-brands fa-square-github" style="color: #ffff;"></i> GitHub</a>
    </div>
    <div class="card bg-[#23262D] sm:m-auto p-2 w-2/12 h-auto rounded-lg">
        <a class="hover:text-gray-400 transition-all" href={LinkedIn} target="_blank" rel="noopener noreferrer" aria-label="Link to LinkedIn profile"><i class="fab fa-linkedin" style="color: #0077B5;"></i> LinkedIn</a>
    </div>
    <div class="card bg-[#23262D] sm:m-auto p-2 w-2/12 h-auto rounded-lg">
        <a class="hover:text-gray-400 transition-all" href={Discord} target="_blank" rel="noopener noreferrer" aria-label="Link to Discord server"><i class="fab fa-discord" style="color: #5865F2;"></i> Discord</a>
    </div>
</div>