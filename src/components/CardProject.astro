---
import GitHub from '../assets/icons/GitHub.astro'

interface Props {
  href: string;
  title: string;
  details: string;
}

const {href, title, details} = Astro.props;
---

<div class="card bg-[#23262D] flex flex-col w-9/12 h-auto mt-2 ml-2 mr-2 rounded-lg">
     <a href={href}>
        <div class="bg-[#23252D] info font-sans text-white opacity-70">
            <GitHub />
            <h2>{title}</h2>
            <p>{details}</p>
        </div>
      </a>
</div>