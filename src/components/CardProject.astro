---
import GitHub from '../assets/icons/GitHub.astro'

interface Props {
  href: string;
  img: string;
  title: string;
}

const {href, img, title} = Astro.props;
---

<div class="card bg-[#23262D] p-2 flex flex-col w-9/12 h-auto mt-2 ml-2 mr-2 rounded-lg">
    <img class="w-full rounded-md" src={img}/>
    <a href={href}>
        <div class="bg-[#23252D] info font-sans p-2 text-white opacity-70">
            <GitHub />
            <h2 class="text-white hover:opacity-50 transition-all">{title}</h2>
          </div>
      </a>
</div>